<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/darkcommonaccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/darkcommonaccent</item>
        <item name="android:windowBackground">@color/darkcommonaccent</item>
        <item name="actionBarStyle">@style/MyActionBarDarkTheme</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle2</item>
    </style>

    <!--Light Theme-->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorthemeLightPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/lightcommonaccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/lightcommonaccent</item>
        <item name="android:windowBackground">@color/lightcommonaccent</item>
        <item name="actionBarStyle">@style/MyActionBarLightTheme</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle1</item>
    </style>

    <style name="MyActionBarLightTheme"  parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/lightcommonaccent</item>
    </style>

    <style name="MyActionBarDarkTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/darkcommonaccent</item>
    </style>

    <style name="MyTextViewStyle1" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyTextViewStyle2" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/blue_a400</item>
    </style>

</resources>
