<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/blue_a400"
        android:gravity="left"
        android:padding="3dp"
        android:text="Compass"
        android:textColor="@color/white" />




    <TextView
        android:id="@+id/txtvw_moreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="3dp"
        android:textSize="10sp"
        android:gravity="left"
        android:textStyle="bold"
        android:text="-"
        android:textColor="@color/black" />

    <edu.arbelkilani.compass.Compass
        android:id="@+id/compass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/screen_percentage_05"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        app:degree_color="@android:color/black"
        app:degree_value_color="@android:color/holo_blue_dark"
        app:orientation_labels_color="@android:color/black"
        app:show_degree_value="true"
        app:show_orientation_labels="true" >


    </edu.arbelkilani.compass.Compass>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_a400"
        />
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgvw_info"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:tint="@color/blue_a400"
            app:srcCompat="@drawable/ic_infoicon" />

        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue_a400"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:tint="@color/blue_a400"
            android:id="@+id/imgvw_audio"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_volume" />


    </LinearLayout>
</LinearLayout>

