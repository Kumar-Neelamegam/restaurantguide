<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/blue_a400"
        android:gravity="left"
        android:padding="3dp"
        android:text="Compass"
        android:textColor="@color/white" />

    <edu.arbelkilani.compass.Compass
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:degree_color="@android:color/black"
        app:degree_value_color="@android:color/holo_blue_dark"
        app:orientation_labels_color="@android:color/black"
        app:show_degree_value="true"
        app:show_orientation_labels="true" />

</LinearLayout>

